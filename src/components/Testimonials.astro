<section id="testimonials" class="py-12 md:py-16 lg:py-20 bg-white">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-10 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4 sm:mb-6 text-brand-primary">What Our Clients Say</h2>
      <p class="text-base sm:text-lg text-brand-primary/80">
        Hear from expats and retirees who trusted us with their relocation to Baja California.
      </p>
    </div>
    
    <div class="grid gap-5 md:gap-8 mb-10 md:mb-16 sm:grid-cols-2 lg:grid-cols-3">
      {testimonials.map(testimonial => (
        <div class="bg-brand-light p-5 md:p-6 rounded-lg shadow-sm border border-brand-secondary/10 hover:shadow-md transition-shadow h-full flex flex-col">
          <div class="flex mb-3 md:mb-4">
            <div set:html={renderStars(testimonial.rating)} />
          </div>
          <blockquote class="text-brand-primary/90 mb-5 md:mb-6 italic text-sm md:text-base flex-grow">
            "{testimonial.quote}"
          </blockquote>
          <div>
            <p class="font-semibold text-brand-primary text-sm md:text-base">{testimonial.author}</p>
            <p class="text-xs md:text-sm text-brand-primary/70">{testimonial.location}</p>
          </div>
        </div>
      ))}
    </div>
    
    <div class="bg-brand-primary/5 rounded-xl p-6 md:p-8">
      <h3 class="text-xl md:text-2xl font-semibold mb-6 md:mb-8 text-brand-primary text-center">Why Clients Trust Us</h3>
      
      <div class="grid gap-5 md:gap-8 sm:grid-cols-2 lg:grid-cols-3">
        {trustBadges.map(badge => (
          <div class="bg-white p-5 md:p-6 rounded-lg shadow-sm border border-brand-secondary/10 text-center h-full">
            <div class="w-10 h-10 md:w-12 md:h-12 bg-brand-secondary/30 rounded-full flex items-center justify-center text-brand-primary mx-auto mb-3 md:mb-4">
              <Fragment set:html={badge.icon} />
            </div>
            <h4 class="text-lg md:text-xl font-semibold mb-2 text-brand-primary">{badge.title}</h4>
            <p class="text-sm md:text-base text-brand-primary/70">{badge.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
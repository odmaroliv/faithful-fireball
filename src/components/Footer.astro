---
import { siteConfig } from '../config/site';

const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: "Services",
    links: [
      { text: "Full Home Relocations", url: "#services" },
      { text: "Partial Moves", url: "#services" },
      { text: "Cross-Border Moving", url: "#services" },
      { text: "Expat Relocation", url: "#services" }
    ]
  },
  {
    title: "Destinations",
    links: [
      { text: "Baja California Norte", url: "#services" },
      { text: "Rosarito & Ensenada", url: "#services" },
      { text: "Baja California Sur", url: "#services" },
      { text: "Los Cabos & La Paz", url: "#services" }
    ]
  },
  {
    title: "Company",
    links: [
      { text: "About Us", url: "#why-us" },
      { text: "Our Process", url: "#how-it-works" },
      { text: "Testimonials", url: "#testimonials" },
      { text: "Blog", url: "/blog" },
      { text: "Contact Us", url: "#contact" }
    ]
  }
];
---

<footer class="pt-12 pb-6 md:pt-16 md:pb-8 bg-brand-primary text-white">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8 md:mb-12">
      <div class="lg:col-span-2">
        <img src="/images/logo.png" alt={siteConfig.company.name + " Logo"} class="h-12 md:h-16 mb-4 bg-white p-2 rounded">
        <p class="text-white/80 mb-4 max-w-md text-sm md:text-base">
          {siteConfig.description}
        </p>
        <div class="flex gap-3 md:gap-4 mb-4">
          <a href={siteConfig.social.linkedin} class="w-8 h-8 md:w-10 md:h-10 bg-white/10 rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24" class="w-4 h-4 md:w-5 md:h-5">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
          <a href={siteConfig.social.facebook} class="w-8 h-8 md:w-10 md:h-10 bg-white/10 rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24" class="w-4 h-4 md:w-5 md:h-5">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
          </a>
          <a href={siteConfig.social.instagram} class="w-8 h-8 md:w-10 md:h-10 bg-white/10 rounded-full flex items-center justify-center text-white hover:bg-white/20 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 24 24" class="w-4 h-4 md:w-5 md:h-5">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </a>
        </div>
        
        <!-- Nuevo: Referencia a Arnian Group -->
        <div class="text-white/60 text-xs border-t border-white/10 pt-3">
          <a href="https://arniangroup.com/" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 hover:text-white transition-colors">
            <span>Arnian Moving is part of</span>
            <span class="font-semibold text-white/80 hover:text-white">Arnian Group</span>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3.5 h-3.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
            </svg>
          </a>
        </div>
      </div>
      
      <div class="hidden md:grid md:grid-cols-3 md:col-span-3 gap-4 md:gap-8">
        {footerLinks.map(column => (
          <div>
            <h4 class="text-base lg:text-lg font-semibold mb-3 md:mb-4 text-white">{column.title}</h4>
            <ul class="space-y-1.5 md:space-y-2">
              {column.links.map(link => (
                <li>
                  <a href={link.url} class="text-sm md:text-base text-white/70 hover:text-white transition-colors">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
    
    <div class="flex flex-wrap gap-1.5 md:gap-2 mb-6 md:mb-8 text-[10px] md:text-xs text-white/40">
      {siteConfig.keywords.map(keyword => (
        <span>{keyword}</span>
      ))}
    </div>
    
    <div class="pt-6 md:pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="text-white/60 text-xs md:text-sm">
        &copy; {currentYear} {siteConfig.company.name}. All rights reserved.
      </div>
      
      <div class="flex flex-wrap justify-center gap-x-4 gap-y-2 text-xs md:text-sm text-white/60">
        <a href="#" class="hover:text-white transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-white transition-colors">Terms of Service</a>
        <a href="/sitemap" class="hover:text-white transition-colors">Sitemap</a>
      </div>
    </div>
  </div>
</footer>
              <div>
                <h4 class="font-medium text-brand-primary text-sm md:text-base">Email</h4>
                <p class="text-brand-primary/80 text-sm md:text-base">{siteConfig.contact.email}</p>
                <p class="text-xs md:text-sm text-brand-primary/60 mt-1">We'll respond within 24 hours</p>
              </div>
            </div>
            
            <!-- Locations -->
            <div class="flex items-start gap-3 md:gap-4">
              <div class="w-9 h-9 md:w-10 md:h-10 bg-brand-secondary/20 rounded-full flex items-center justify-center text-brand-primary shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 md:w-5 md:h-5">

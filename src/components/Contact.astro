                <h4 class="font-medium text-brand-primary text-sm md:text-base">Phone</h4>
                <p class="text-brand-primary/80 text-sm md:text-base">{siteConfig.contact.phone}</p>
                <p class="text-xs md:text-sm text-brand-primary/60 mt-1">Available {siteConfig.contact.operatingHours}</p>
              </div>
            </div>
            

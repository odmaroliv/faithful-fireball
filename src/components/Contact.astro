
---
import { siteConfig } from '../config/site';
---

<section id="contact" class="py-12 md:py-16 lg:py-20 bg-brand-accent/20">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-10 md:mb-16">
      <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold mb-4 sm:mb-6 text-brand-primary">
        Get in Touch
      </h2>
      <p class="text-base sm:text-lg text-brand-primary/80">
        Ready to plan your move to Baja? Contact us for a free consultation and quote.
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-start">
      
      <!-- Form Column -->
      <div class="bg-white p-5 md:p-8 rounded-xl shadow-sm border border-brand-secondary/10">
        <h3 class="text-xl md:text-2xl font-semibold mb-4 md:mb-6 text-brand-primary">
          Request a Free Quote
        </h3>
        <form id="contactForm" class="space-y-4 md:space-y-6">
          <!-- Nombre y Email -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-brand-primary mb-1">Full Name*</label>
              <input 
                type="text" 
                id="name" 
                name="from_name" 
                required 
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
                placeholder="Your name"
              />
            </div>
            <div>
              <label for="email" class="block text-sm font-medium text-brand-primary mb-1">Email Address*</label>
              <input 
                type="email" 
                id="email" 
                name="reply_to" 
                required 
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
                placeholder="you@example.com"
              />
            </div>
          </div>
          
          <!-- Teléfono y Compañía -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="phone" class="block text-sm font-medium text-brand-primary mb-1">Phone Number*</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                required
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
                placeholder="(123) 456-7890"
              />
            </div>
            <div>
              <label for="company" class="block text-sm font-medium text-brand-primary mb-1">Company</label>
              <input 
                type="text" 
                id="company" 
                name="company" 
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
                placeholder="Your company (if applicable)"
              />
            </div>
          </div>
          
          <!-- Ubicación y Fecha -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
              <label for="location" class="block text-sm font-medium text-brand-primary mb-1">Current Location*</label>
              <input 
                type="text" 
                id="location" 
                name="current_location" 
                required
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
                placeholder="City, State"
              />
            </div>
            <div>
              <label for="moveDate" class="block text-sm font-medium text-brand-primary mb-1">Approximate Move Date*</label>
              <input 
                type="date" 
                id="moveDate" 
                name="move_date" 
                required
                class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
              />
            </div>
          </div>
          
          <!-- Destino en Baja -->
          <div>
            <label for="destination" class="block text-sm font-medium text-brand-primary mb-1">Baja Destination*</label>
            <select 
              id="destination" 
              name="destination" 
              required
              class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
            >
              <option value="" disabled selected>Select your destination</option>
              {siteConfig.destinations.map((destination) => (
                <option value={destination}>{destination}</option>
              ))}
              <option value="Other">Other (specify in message)</option>
            </select>
          </div>
          
          <!-- Tipo de Mudanza -->
          <div>
            <label class="block text-sm font-medium text-brand-primary mb-1">Move Type*</label>
            <div class="grid grid-cols-2 gap-3 mt-1">
              <div class="flex items-center">
                <input 
                  type="radio" 
                  id="fullMove" 
                  name="move_type" 
                  value="Full Household" 
                  required
                  class="h-4 w-4 text-brand-primary focus:ring-brand-primary/20"
                />
                <label for="fullMove" class="ml-2 text-sm text-brand-primary/80">Full Household</label>
              </div>
              <div class="flex items-center">
                <input 
                  type="radio" 
                  id="partialMove" 
                  name="move_type" 
                  value="Partial/Select Items" 
                  class="h-4 w-4 text-brand-primary focus:ring-brand-primary/20"
                />
                <label for="partialMove" class="ml-2 text-sm text-brand-primary/80">Partial/Select Items</label>
              </div>
            </div>
          </div>
          
          <!-- Mensaje -->
          <div>
            <label for="message" class="block text-sm font-medium text-brand-primary mb-1">
              Tell Us About Your Move*
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="4" 
              required
              class="w-full px-3 py-2 border border-brand-secondary/30 rounded-lg focus:ring-2 focus:ring-brand-primary/20 focus:border-brand-primary outline-none text-sm"
              placeholder="What items are you planning to move? Include any special requirements or questions you have."
            ></textarea>
          </div>
          
          <!-- Preferred Contact Method -->
          <div>
            <label class="block text-sm font-medium text-brand-primary mb-1">Preferred Contact Method</label>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 mt-1">
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="contactEmail" 
                  name="contact_email" 
                  value="Email" 
                  checked
                  class="h-4 w-4 text-brand-primary focus:ring-brand-primary/20"
                />
                <label for="contactEmail" class="ml-2 text-sm text-brand-primary/80">Email</label>
              </div>
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="contactPhone" 
                  name="contact_phone" 
                  value="Phone" 
                  class="h-4 w-4 text-brand-primary focus:ring-brand-primary/20"
                />
                <label for="contactPhone" class="ml-2 text-sm text-brand-primary/80">Phone</label>
              </div>
              <div class="flex items-center">
                <input 
                  type="checkbox" 
                  id="contactWhatsApp" 
                  name="contact_whatsapp" 
                  value="WhatsApp" 
                  class="h-4 w-4 text-brand-primary focus:ring-brand-primary/20"
                />
                <label for="contactWhatsApp" class="ml-2 text-sm text-brand-primary/80">WhatsApp</label>
              </div>
            </div>
          </div>
          
          <!-- Hidden input for contact preferences -->
          <input type="hidden" name="contact_preferences" id="contactPreferences">
          
          <!-- Button -->
          <div>
            <button
              type="submit"
              id="submitButton"
              class="btn-primary w-full py-2.5 text-sm"
            >
              Submit Request
            </button>
          </div>
          
          <!-- Status Messages -->
          <div id="successMessage" class="hidden bg-green-50 text-green-700 p-3 rounded-lg text-center text-sm">
            Message sent successfully! We'll be in touch soon.
          </div>
          <div id="errorMessage" class="hidden bg-red-50 text-red-700 p-3 rounded-lg text-center text-sm">
            There was an error sending your message. Please try again or contact us directly.
          </div>
          
          <!-- Privacy Note -->
          <p class="text-xs text-brand-primary/60 text-center">
            Your information is secure and will never be shared with third parties.
            <br>Fields marked with * are required.
          </p>
        </form>
      </div>
      
      <!-- Contact Info Column -->
      <div class="space-y-6">
        <!-- Contact Us Directly -->
        <div class="bg-white p-5 md:p-6 rounded-xl shadow-sm border border-brand-secondary/10">
          <h3 class="text-lg md:text-xl font-semibold mb-3 md:mb-4 text-brand-primary">
            Contact Us Directly
          </h3>
          <div class="space-y-4">
            
